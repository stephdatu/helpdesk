<%= form_for(@ticket) do |f| %>
  <p>
    <%= f.label :name, "Your Name" %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :subject %><br>
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </p>
  <%= f.submit %>
<% end %>
